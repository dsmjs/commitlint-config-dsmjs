{
  "name": "commitlint-config-dsmjs",
  "description": "shareable config for commitlint",
  "license": "MIT",
  "author": "dsmJS",
  "repository": "dsmjs/commitlint-config-dsmjs",
  "bugs": "https://github.com/dsmjs/commitlint-config-dsmjs/issues",
  "homepage": "https://github.com/dsmjs/commitlint-config-dsmjs#readme",
  "main": "index.js",
  "scripts": {
    "lint:md": "globstar --node -- markdownlint **/*.md",
    "test": "run-s lint:*",
    "commitmsg": "commitlint -e",
    "precommit": "npm test",
    "greenkeeper:update-lockfile": "greenkeeper-lockfile-update",
    "greenkeeper:upload-lockfile": "greenkeeper-lockfile-upload"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "cz-conventional-changelog": "2.1.0",
    "globstar": "1.0.0",
    "greenkeeper-lockfile": "1.15.1",
    "husky": "1.1.4",
    "markdownlint-cli": "0.13.0",
    "npm-run-all": "4.1.3"
  },
  "dependencies": {
    "commitlint-config-travi": "1.2.31"
  }
}
